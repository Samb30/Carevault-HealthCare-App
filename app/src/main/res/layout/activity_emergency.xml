<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        tools:context=".emergency.EmergencyActivity">

        <TextView
            android:id="@+id/my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/latoheavy"
            android:gravity="center"
            android:lineSpacingExtra="-2sp"
            android:text="Emergency Services"
            android:textColor="#1D212D"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="28dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="383dp" />

        <RelativeLayout
            android:id="@+id/frame_11712"
            android:layout_width="355dp"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/selected_background"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/ellipse_90"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="0.3"
                android:background="@drawable/picellipse" />

            <TextView
                android:id="@+id/my_profile11"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/latoheavy"
                android:gravity="top"
                android:lineSpacingExtra="-2sp"
                android:text="Emergency Call"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/img11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/forwardbutton" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_157"
            android:layout_width="355dp"
            android:layout_height="90dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/selected_background"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/elli_90"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="0.3"
                android:background="@drawable/picellipse" />

            <TextView
                android:id="@+id/m1"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/latoheavy"
                android:gravity="top"
                android:text="Emergency Procedures"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/ima2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/forwardbutton" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fnm3"
            android:layout_width="355dp"
            android:layout_height="90dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/selected_background"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/ell90"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:alpha="0.3"
                android:background="@drawable/picellipse" />

            <TextView
                android:id="@+id/my_pr1"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/latoheavy"
                android:gravity="top"
                android:lineSpacingExtra="-2sp"
                android:text="Ambulance"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <ImageButton
                android:id="@+id/imageBu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/forwardbutton" />
        </RelativeLayout>

        <TextView
            android:id="@+id/my_pro13"
            android:layout_width="210dp"
            android:layout_height="65dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/loginsolidrect"
            android:fontFamily="@font/latoheavy"
            android:gravity="center"
            android:text="Exit"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>